<prototype>
  <common>
    <method>IMC</method>
    <t_start>0.0</t_start>
    <t_stop>0.5</t_stop>
    <dt_start>0.01</dt_start>
    <t_mult>1.0</t_mult>
    <dt_max>1.0</dt_max>
    <photons>500000</photons>
    <seed>14706</seed>
    <tilt>FALSE</tilt>
    <stratified_sampling>FALSE</stratified_sampling>
    <output_frequency>1</output_frequency>
    <dd_transport_type>CELL_PASS</dd_transport_type>
    <n_omp_threads>1</n_omp_threads>
    <mesh_decomposition>CUBE</mesh_decomposition>
    <batch_size>10000</batch_size>
    <particle_message_size>20000</particle_message_size>
    <write_silo>TRUE</write_silo>
  </common>

  <debug_options>
    <print_verbose>FALSE</print_verbose>
    <print_mesh_info>FALSE</print_mesh_info>
  </debug_options>

  <spatial>
    <x_division>
      <x_start>0.0</x_start>
      <x_end> 1.0</x_end>
      <n_x_cells>8</n_x_cells>
    </x_division>

    <y_division>
      <y_start>0.0</y_start>
      <y_end> 4.0</y_end>
      <n_y_cells>8</n_y_cells>
    </y_division>

    <z_division>
      <z_start>0.0</z_start>
      <z_end>4.0</z_end>
      <n_z_cells>8</n_z_cells>
    </z_division>

    <region_map>
      <x_div_ID>0</x_div_ID>
      <y_div_ID>0</y_div_ID>
      <z_div_ID>0</z_div_ID>
      <region_ID>6</region_ID>
    </region_map>
  </spatial>

  <boundary>
    <bc_right>REFLECT</bc_right>
    <bc_left>REFLECT</bc_left>

    <bc_up>REFLECT</bc_up>
    <bc_down>REFLECT</bc_down>

    <bc_top>REFLECT</bc_top>
    <bc_bottom>REFLECT</bc_bottom>
  </boundary>

  <regions>
    <region>
      <ID>6</ID>
      <density>1.0</density>
      <CV>1.0</CV>
      <opacA>100.0</opacA>
      <opacB>0.0</opacB>
      <opacC>0.0</opacC>
      <opacS>0.0</opacS>
      <initial_T_e>1.0</initial_T_e>
      <initial_T_r>1.0</initial_T_r>
    </region>
  </regions>

</prototype>
